<% content_for :header do %>
    <h1><%=t :Edit %></h1>
<% end %>

<% content_for :back do %>
    <%#
     TODO:
        graphs don't work when going back
        because jQuery mobile gets the wrong
        url from history so the json path
        for graphs cannot be reached...
        Should find a solution or wait for
        jQuery mobile's fix.
    %>
    <%= mobile_link_back_to account_path %>
<% end %>

<% form_for @account, :builder => ErrorFormBuilder, :url => account_path, :html => {'data-ajax' => false} do |f| %>
    <% if @account.errors.any? %>
        <div data-role="collapsible">
          <h3><%=t 'activerecord.errors.template.header', :count => @account.errors.count %></h3>
          <p><%= f.error_messages %></p>
        </div>
    <% end %>

    <%= render :partial => "form", :object => f, :locals => { :countries => @countries, :mobile_prefixes => @mobile_prefixes } %>
<% end %>

