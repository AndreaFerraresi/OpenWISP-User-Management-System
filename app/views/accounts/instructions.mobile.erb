<%= content_for :data_url, account_instructions_path %>

<% content_for :header do %>
    <h1><%=t_safe :Instructions %></h1>
<% end %>

<% content_for :back do %>
    <% if current_account %>
        <%= mobile_link_back_to account_path %>
    <% else %>
        <%= mobile_link_back_to root_path %>
    <% end %>
<% end %>


<div data-role="collapsible">
  <h3><%=t_safe :General_infos %></h3>
  <h4><%=t_safe :General_infos_subheading %></h4>

  <p>
    <%=t_safe :General_infos_howto, :login => t(:Manage_your_account) %>
    <br />
    <%= @custom_instructions %>
  </p>
</div>

<div data-role="collapsible" data-collapsed="true">
  <h3><%=t_safe :Manage_your_account %></h3>
  <h4><%=t_safe :Manage_your_account_subheading %></h4>

  <p><%=t_safe :Manage_your_account_howto, :login => t(:Manage_your_account) %></p>
</div>

<div data-role="collapsible" data-collapsed="true">
  <h3><%=t_safe :Register %></h3>
  <h4><%=t_safe :Register_subheading %></h4>

  <p><%=t_safe :Register_howto_1, :registration => t(:Register) %></p>

  <ol>
    <li><%=t_safe :Data_insertion %></li>
    <li><%=t_safe :Data_verification %></li>
  </ol>

  <p><%=t_safe :Register_howto_2, :registration => t(:Register) %></p>
</div>

<div data-role="collapsible" data-collapsed="true">
  <h3><%=t_safe :Reset_password %></h3>
  <h4><%=t_safe :Reset_password_subheading %></h4>
  <p><%=t_safe :Reset_password_howto, :reset_password => t(:Reset_password) %></p>
</div>


