<% unless @account.verify_with_gestpay? %>
    <% content_for :after_defaults do %>
        <%= javascript_tag "$(function(){
            owums.periodicallyCheckVerification({
                frequency: 2,
                url: '#{ url_for(:action => 'verification') }',
                update: '#verification'
            });
        }); " %>
    <% end %>
    
    <% content_for :header do %>
        <h1><%=t :Verification %></h1>
    <% end %>
    
    <div id="verification">
      <%= render :partial => 'verification' %>
    </div>
<% else %>
    <div id="verification" class="mobile">
        <%= render :partial => 'credit_card_form.html.erb' %>
    </div>
<% end %>
