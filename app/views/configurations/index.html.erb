<div class="grid_12">
  <div class="box">
    <h2><%=t :Configuration_keys %></h2>
    <br />

    <table>
      <thead>
        <tr>
          <th><%=t :Key %></th>
          <th><%=t :Value %></th>
          <th><%=t :Operations %></th>
        </tr>
      </thead>
      <tbody>
        <% @configurations.each do |configuration| %>
          <tr class="hover">
            <td><strong><%= configuration.key %></strong></td>
            <td><%= truncate h(configuration.value), :length => 50 %></td>
            <td><%= link_to t(:Edit), edit_configuration_path(configuration) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
