<table>
  <thead>
    <tr>
      <th><%= t(:Username) %></th>
      <th><%= t(:Traffic_total) %></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
    </tr>
  </tfoot>
  <tbody>
    <% top_traffic_users.each do |user| %>
    <tr>
      <td><%= link_to h(user.username), user %></td>
      <td><%=h bytes_to_human(user.total_traffic) %></td>
    </tr>
    <% end %>
  </tbody>
</table>