<div id="_rad_list_">
  <div align="center">
    <%=h total_accountings %> <%=t :total_results %>
    <%= will_paginate accountings, :renderer => 'RemoteLinkRenderer',
                                   :params => params.merge( { :action => action } ),
                                   :remote => { :update => '_rad_list_' },
                                   :next_label => t(:next),
                                   :previous_label => t(:previous) %>
  </div>
  <table>
    <thead>
      <tr>
        <th scope="col" <%= sort_td_class_helper "acct_start_time" %>>
          <%= sort_remote_link_helper t(:Start_time), 'acct_start_time', { :action => action, :update => '_rad_list_', :before => "jQuery( '#rad_list_spinner' ).show();", :success => "jQuery( '#rad_list_spinner' ).hide();" } %>
          <%= image_tag("arrow_up.gif", :align => "bottom", :border => 0, :class =>"arrow_up", :size => "14x14") %>
          <%= image_tag("arrow_down.gif", :align => "bottom", :border => 0, :class =>"arrow_down", :size => "14x14") %>
        </th>
        <th scope="col" <%= sort_td_class_helper "acct_stop_time" %>>
          <%= sort_remote_link_helper t(:Stop_time), 'acct_stop_time', { :action => action, :update => '_rad_list_', :before => "jQuery( '#rad_list_spinner' ).show();", :success => "jQuery( '#rad_list_spinner' ).hide();" } %>
          <%= image_tag("arrow_up.gif", :align => "bottom", :border => 0, :class =>"arrow_up", :size => "14x14") %>
          <%= image_tag("arrow_down.gif", :align => "bottom", :border => 0, :class =>"arrow_down", :size => "14x14") %>
        </th>
        <th scope="col" <%= sort_td_class_helper "acct_input_octects" %>>
          <%= sort_remote_link_helper t(:Uploaded_bytes), 'acct_input_octects', { :action => action, :update => '_rad_list_', :before => "jQuery( '#rad_list_spinner' ).show();", :success => "jQuery( '#rad_list_spinner' ).hide();" } %>
          <%= image_tag("arrow_up.gif", :align => "bottom", :border => 0, :class =>"arrow_up", :size => "14x14") %>
          <%= image_tag("arrow_down.gif", :align => "bottom", :border => 0, :class =>"arrow_down", :size => "14x14") %>
        </th>
        <th scope="col" <%= sort_td_class_helper "acct_output_octects" %>>
          <%= sort_remote_link_helper t(:Downloaded_bytes), 'acct_output_octects', { :action => action, :update => '_rad_list_', :before => "jQuery( '#rad_list_spinner' ).show();", :success => "jQuery( '#rad_list_spinner' ).hide();" } %>
          <%= image_tag("arrow_up.gif", :align => "bottom", :border => 0, :class =>"arrow_up", :size => "14x14") %>
          <%= image_tag("arrow_down.gif", :align => "bottom", :border => 0, :class =>"arrow_down", :size => "14x14") %>
        </th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <td colspan="12">
          <%= image_tag("spinner.gif",
                        :align => "absmiddle",
                        :border => 0,
                        :id =>"rad_list_spinner",
                        :style =>"display:none;",
                        :size => "12x12")
          %>
          &nbsp;
        </td>
      </tr>
    </tfoot>
    <tbody>
      <% accountings.each do |accounting| %>
        <tr>
          <td><%=h accounting.acct_start_time.strftime("%d/%m/%y - %H:%M") %></td>
          <% if accounting.acct_stop_time.nil? %>
            <td><%=t :online %></td>
          <% else %>
            <td><%=h accounting.acct_stop_time.strftime("%d/%m/%y - %H:%M") %></td>
          <% end %>
          <td><%=h bytes_to_human(accounting.acct_input_octects) %></td>
          <td><%=h bytes_to_human(accounting.acct_output_octects) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
