<div class="grid_12">
  <div class="box">
    <h2><%=t :Operators %></h2>
    <br />

    <table>
      <thead>
        <tr>
          <th><%=t :Login %></th>
          <th><%=t :Logged_in %></th>
          <th><%=t :Current_login_at %></th>
          <th><%=t :Current_login_ip %></th>
          <th><%=t :Last_login_at %></th>
          <th><%=t :Last_login_ip %></th>
          <th><%=t :Login_count %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @operators.each do |operator| %>
          <tr class="hover">
            <td><%= link_to operator.login, operator %></td>
            <td><%= operator.logged_in? %></td>
            <td><%= operator.current_login_at.nil? ? '-' : operator.current_login_at.strftime("%d/%m/%y %H:%M:%S") %></td>
            <td><%= operator.current_login_ip.nil? ? '-' : operator.current_login_ip %></td>
            <td><%= operator.last_login_at.nil? ? '-' : operator.last_login_at.strftime("%d/%m/%y %H:%M:%S") %></td>
            <td><%= operator.last_login_ip.nil? ? '-' : operator.last_login_ip %></td>
            <td><%= operator.login_count %></td>
            <td>
              <%= link_to t(:Edit), edit_operator_path(operator) %>
              <%= link_to t(:Destroy), operator_path(operator), :method => :delete, :confirm => t(:Are_you_sure) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <p><%= link_to t(:Add_new_operator), new_operator_path %></p>
  </div>
</div>
