<!doctype html>
<html>
<head>
  <title><%=t :Users_management %></title>

  <%= stylesheet_link_tag 'jquery.mobile/styles', 'custom-mobile' %>

  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery.mobile' %>

  <%= yield :after_defaults %>

  <%= javascript_include_tag 'fluid16' %>
</head>
<body>

<div data-role="page" data-backbtn="<%= back_for_mobile? %>">
  <div data-role="header" data-position="inline">
    <% if back_for_mobile? %>
        <a href="#" data-rel="back" data-icon="back"><%=t :Back %></a>
    <% end %>

    <% if current_page? root_path %>
        <h1>
          <%= link_to image_tag("logo_caspur.png", :border => 0, :size => "64x50", :alt => 'Open WISP User Management System', :class => "wums_logo"), :root %><br/>
          Open WISP
        </h1>
    <% else %>
        <%= yield :header %>
    <% end %>

    <% if current_account %>
        <%= link_to t(:Logout), account_logout_path, 'data-icon' => 'delete', 'data-ajax' => false, :class => 'ui-btn-right' %>
    <% end %>
  </div>

  <div data-role="content">
    <% if current_page? root_path %>
        <ul data-role="listview" data-inset="true">
          <% if !current_account %>
              <li><%= link_to t(:Manage_your_account), account_login_url %></li>
              <li><%= link_to t(:Register), account_registration_url %></li>
              <li><%= link_to t(:Forgot_password), password_reset_url %></li>
          <% end %>
        </ul>
    <% end %>

    <%= yield unless current_page? root_path %>
  </div>
</div>
</body>
</html>
