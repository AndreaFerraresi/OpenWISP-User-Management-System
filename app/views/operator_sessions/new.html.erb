<div class="grid_6 prefix_3 suffix_3">
  <div class="box">
    <div class="block" id="login">
      <%= simple_form_for @operator_session, :url => operator_session_path do |f| %>
          <fieldset>
            <legend><%=t :Login %></legend>
            <p><%= f.error_messages %></p>

            <%= f.input :login %>

            <%= f.input :password %>

            <div id="remember_me">
              <%= f.input :remember_me, :as => :boolean %>
            </div>

            <%= f.button :submit %>
          </fieldset>
      <% end %>
    </div>
  </div>
</div>
<div class="clear"></div>